{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["./src/**/*", "jest/setupTests.ts", "jest/fileTransformer.ts"],
  "exclude": ["node_modules", "jest", "build"]
}
